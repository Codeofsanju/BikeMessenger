<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.example.sanjeev.bikemessenger.MainActivity"
    android:weightSum="1">

    <TextView
        android:id="@+id/score"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:text="Money: $300"
        android:textSize="20sp"
        android:paddingRight="10dp"
        android:gravity="center_vertical"/>

    <FrameLayout
        android:id="@+id/frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/start"
            android:text="Tap to Start!"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="30sp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="130dp"/>

        <ImageView
            android:id="@+id/bike"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/bike"
            android:layout_gravity="center_vertical"/>

        <ImageView
            android:id="@+id/packageNorm"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/packagenorm"/>

        <ImageView
            android:id="@+id/packageRed"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@drawable/packagered"/>

        <ImageView
            android:id="@+id/nail"
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:src="@drawable/nail"/>

        <ImageView
            android:id="@+id/taxi"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/taxi"/>

    </FrameLayout>

</LinearLayout>



